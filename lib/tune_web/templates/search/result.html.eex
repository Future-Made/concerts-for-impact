<div class="result">
  <div class="artwork">
    <div class="play-button" phx-click="play" phx-value-uri="<%= @item.uri %>">
      <%= render TuneWeb.PlayerView, "play.html", []%>
    </div>
    <%= img_tag thumbnail(@item), alt: name(@item) %>
  </div>
  <div class="meta">
    <%= live_patch to: Routes.explorer_path(@socket, :show_album, @item.id) do %>
      <p class="name"><%= name(@item) %></p>
    <% end %>
    <p class="artist-name"><%= author_name(@item) %></p>
  </div>
</div>
